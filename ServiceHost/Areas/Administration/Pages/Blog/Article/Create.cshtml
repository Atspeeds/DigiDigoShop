@*@model BlogManagement.Application.Contract.Article.CreateArticle
@{ }

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">موضوع</label>
                    <input type="text" class="form-control" asp-for="Title" onchange="makeSlug('Title', 'Slug')">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="Title"></span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="" class="control-label">کد</label>
                    <input type="text" class="form-control" asp-for="Code">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="Code"></span>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">گروه محصول</label>
                    <select class="form-control" asp-for="CategoryId"
                            asp-items='new SelectList(Model.Categories, "Id", "Name")'>
                        <option value="0">گروه محصول</option>
                    </select>
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="CategoryId"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Picture" accept="image/*">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="Picture"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="PictureAlt"></span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="PictureTitle"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="ShortDescription" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="ShortDescription"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="Description"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="Slug"></span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="KeyWords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="KeyWords">
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="KeyWords"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <ul class="parsley-errors-list filled" id="parsley-id-32">
                        <li class="parsley-required">
                            <span asp-validation-for="MetaDescription"></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>*@