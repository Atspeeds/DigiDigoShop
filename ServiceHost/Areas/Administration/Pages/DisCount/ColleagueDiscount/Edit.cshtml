@model DisCountManagement.Application.Contract.ColleagueDiscount.EditColleagueDisCount
@{ }

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش محصول: @Model.productViews.FirstOrDefault(x=>x.Id==Model.ProductId).Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">محصول را انتخاب کنید</label>
                    <select class="form-control" asp-for="ProductId"
                            asp-items='new SelectList(Model.productViews, "Id", "Name")'>
                        <option value="0">محصول</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="DisCountRate" class="control-label">درصد تخفیف</label>
                    <input type="number" class="form-control" asp-for="DisCountRate">
                    <span asp-validation-for="DisCountRate" class="error"></span>
                </div>
            </div>

        </div>
        <input type="hidden" class="form-control" asp-for="@Model.Id">

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>