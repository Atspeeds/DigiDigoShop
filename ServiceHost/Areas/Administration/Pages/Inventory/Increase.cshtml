@model InventoryManagement.Application.Contract.WareHouse.IncreaseInventory

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">
        افزایش موجودی انبار
    </h4>
</div>

<form asp-page="./Index" asp-page-handler="Increase"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="input-group col-md-12">

                        <input asp-for="Count" type="number" id="typeNumber" class="form-control active" autocompleted="">

                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="input-group col-md-12">
                        <textarea asp-for="Description">

                        </textarea>

                    </div>

                </div>
            </div>
            <input type="hidden" asp-for="WareHouseID" />
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">افزایش</button>
    </div>
</form>
